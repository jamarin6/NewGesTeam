<div class="down-hdr thing"><h4>Your <br>Members by: <br><strong><%= @team.name %></strong></h4></div>

<table class="member_table centerm">
	<tr>
		<th> Name </th>
		<th> Email </th>
		<th> Incidences </th>	
		<th></th>
	</tr>
	<% @members.each do |member|%>		
		<tr class="<%= cycle("list_line_odd", "list_line_even") %>">
			<td><%= member.name %></td>
			<td><%= member.email %></td>
			<td><%= member.incidences %></td>
			<td>				
				<%#= link_to "show", team_path(member) %><br/>
				<%= link_to "edit", edit_team_member_path(@team, member) %><br/>
				<%#= link_to "destroy", team_member_path(:team_id => member.team_id, :member_id => member.id), confirm: 'Are you sure?', method: :delete %><br/>
			</td>
		</tr>
	<% end %>
</table>


