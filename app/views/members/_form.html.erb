<div class="sidedar large-4 columns left">&nbsp;</div>

<div class="large-4 columns">

	<%= form_for [@member.team, @member] do |f|%>
		<%= f.label :name %>
		<%= f.text_field :name, :autofocus => true %>
		<br>
		<%= f.label :email %>
		<%= f.text_field :email %>
		<br>
		<%= f.label :incidences %>
		<%= f.text_field :incidences %>
		<br>


		<%= f.submit 'Save' %>
		<%= link_to 'Cancel', teams_path %>
	<% end %>

</div>